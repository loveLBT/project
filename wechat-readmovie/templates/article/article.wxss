.article {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ededed;
  border-top: 1rpx solid #ededed;
  padding-bottom: 10rpx;
}
.article-user {
  margin:10rpx 0 20rpx 10rpx; 
}
.article-user-avatar {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.article-user-name {
  margin-left: 20rpx;
  vertical-align: middle;
  font-size: 26rpx;
}
.article-content-title {
  margin-bottom: 10px;
  margin-left: 10px;
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
}
.article-content-img {
  width: 100%;
  height: 340rpx;
  margin: auto 0;
  margin-bottom: 15px;
}
.article-content-text {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.article-action {
  display: flex;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
  font-size: 13px;
}
.article-action-icon {
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}
.article-action-text {
  vertical-align: middle;
  margin-right: 20px;
}