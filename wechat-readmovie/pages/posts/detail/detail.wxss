/* pages/posts/detail/detail.wxss */
.container {
  display: flex;
  flex-direction: column;
}
.article-img {
  width: 100%;
  height: 456rpx;
}
.article-music-play {
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  top: 178rpx;
  margin-left: -51rpx;
  opacity: 0.6;
}
.article-user {
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.article-user-avatar {
  width: 64rpx;
  height: 64rpx;
  vertical-align: middle;
}
.article-user-name {
  font-size: 30rpx;
  font-weight: 300;
  color: #666;
  margin-left: 20rpx;
  vertical-align: middle;
}
.article-time-label {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}
.article-time {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  vertical-align: middle;
}
.article-title{
  margin-left: 40rpx;
  font-size: 36rpx;
  font-weight: 700;
  margin-top: 30rpx;
  letter-spacing: 2px;
  color: #4b446c;
}
.article-action {
  margin-top: 20rpx;
}
.article-action-box {
  float: right;
  margin-right: 40rpx;
}
.article-action-btn {
  width: 90rpx;
  height: 90rpx;
  margin-left: 30rpx;
}
.article-action-line {
  width: 90%;
  height: 2rpx;
  background-color: #e5e5e5;
  position: relative;
  top: 45rpx;
  margin: 0 auto;
  z-index: -99;
}
.article-text {
  color: #666;
  margin-left: 30rpx;
  margin-top: 20rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
  font-size: 26rpx;
}